<div class="container">
  <div class="row">
    <h2>管理者画面</h2>
    </div>
  <div class="row today-order">
    <br>
    <p>本日の注文件数:　<%= @orders.count %>件</p>
    <br>
    <br>
  </div>
  
<div class="row">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.member.last_name %></td>
      <td><%= order.order_status %></td>
      <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </table>
  <%= paginate @order %>
</div>
</div>