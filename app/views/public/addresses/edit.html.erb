<div class="container">
  <h2>配送先住所編集</h2>
  <%= form_with model: @address, url: edit_address_path do |f| %>
  <div class="form-group">
    <%= f.label :"郵便番号" %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :"宛名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit "編集する", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>