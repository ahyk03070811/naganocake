<div class="container">

  <h2>登録情報編集</h2>

  <div class="row">

    <div class="col-xs-12">

      <%= form_with model: @customer, url: customers_info_path do |f| %>

      <div class="form-group">
        <%= f.label :"名前" %><br />
        <%= f.label :"姓" %>
        <%= f.text_field :last_name, autofoucus: true %>
        <%= f.label :"名" %>
        <%= f.text_field :first_name, autofoucus: true %>
      </div>

      <div class="form-group">
        <%= f.label :"フリガナ" %><br />
        <%= f.label :"セイ" %>
        <%= f.text_field :last_name_kana, autofoucus: true %>
        <%= f.label :"メイ" %>
        <%= f.text_field :first_name_kana, autofoucus: true %>
      </div>

      <div class="form-group">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofoucus: true %>
      </div>

      <div class="form-group">
        <%= f.label :"電話番号" %><br />
        <%= f.text_field :telephone_number, autofoucus: true %>
      </div>

      <div class="form-group">
        <%= f.label :"郵便番号" %><br />
        <%= f.text_field :postal_code, autofoucus: true %>
      </div>

      <div class="form-group">
        <%= f.label :"住所" %><br />
        <%= f.text_field :address, autofoucus: true %>
      </div>

      <%= f.submit "編集を保存する", class: "btn btn-primary" %>
      <% end %>

      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>

    </div>
  </div>
</div>