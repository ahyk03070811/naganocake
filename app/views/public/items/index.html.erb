<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2>商品一覧<span>(全<%= @quantity %>件)</span></h2>
      <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(200,200) %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= item.price %></p>
    </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-4">
      <%= paginate @items %>
    </div>
  </div>
</div>