<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    
    <h2>ジャンル追加・一覧画面</h2><br>
    
    <div class="form-group col-md-10">
      <%= form_with modek: @genre do |f| %>
        
        <%= f.label :ジャンル %>
        <%= f.text_field :name,class: "col-md-4" %>
        
        <%= f.submit "追加", class: "btn btn-primary" %>
        
      <% end %>
        
    </div>
    
    
    <br>
    
     <table class="table genre-index">
       <thear>
         <tr>
           <th>ジャンル</th>
         </tr>
       </thear>
       
       <tbody>
         <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
       </tbody>
       
     </table>
    
  </div>
</div>